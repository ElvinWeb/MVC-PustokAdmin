@using MVC.PracticeTask_1.Models;
@model List<Service>;
@{
    int counter = 0;
}
<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between">
        <h1>Services Datas</h1>
        <a class="btn btn-primary" style="width:100px;" asp-action="Create" asp-controller="Service">Add</a>
    </div>

    <table class="table table-hover table-striped mt-3 shadow">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Icon</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@service.Title</td>
                    <td>@service.Description</td>
                    <td>@service.Icon</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Service" asp-route-id="@service.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Service" asp-route-id="@service.Id">Delete</a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>