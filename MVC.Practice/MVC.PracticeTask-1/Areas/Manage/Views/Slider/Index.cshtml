@using MVC.PracticeTask_1.Models;
@model List<Slide>;
@{
    int counter = 0;
}
@section cssFiles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.css" />
}
<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between">
        <h1>Slides Datas</h1>
        <a class="btn btn-primary" style="width:100px;" asp-action="Create" asp-controller="Slider">Add</a>
    </div>

    <table class="table table-hover table-striped mt-3 shadow">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">BtnContent</th>
                <th scope="col">Redirect-URL</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slide in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slide.Title</td>
                    <td>@slide.Description</td>
                    <td>@slide.BtnText</td>
                    <td style="max-width:280px;">@slide.RedirectUrl</td>
                    <td style="max-width:150px;"><img style="width:40%" src="~/uploads/bg-slide/@slide.ImgUrl" /></td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Slider" asp-route-id="@slide.Id">Update</a>
                        <a class="btn btn-danger delete-btn" asp-action="Delete" asp-controller="Slider" asp-route-id="@slide.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

@section jsFiles{
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.js"></script>
}