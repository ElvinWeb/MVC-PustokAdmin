@model Author;
<div class="container shadow " style="max-width:700px;padding:50px;margin-top:150px;">
    <div>
        <h1>Create a Author</h1>
    </div>
    <form method="post">
        <div class="mb-3">
            <label for="" class="form-label">Name</label>
            <input asp-for="FullName" type="text" class="form-control">
            <span asp-validation-for="FullName" style="color:red"></span>
        </div>

        <button type="submit" class="btn btn-primary w-25">Submit</button>
        <a class="btn btn-success w-25" asp-action="Index" asp-controller="Author">Back To Home</a>
    </form>
</div>